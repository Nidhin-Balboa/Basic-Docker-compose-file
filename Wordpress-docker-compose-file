version: '3'

services:
  db:
    image: mysql:5.7
    container_name: mysql_5_7
    volumes:
      - db_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: Qwerty@12345
      MYSQL_DATABASE: wordpress
      MYSQL_USER: wpuser
      MYSQL_PASSWORD: wpuser
    networks:
      - wordpress-site

  wordpress:
    container_name: WPsite
    depends_on:
      - db
    image: wordpress:latest
    ports:
      - '3005:80'
    restart: always
    volumes:
      - './:/var/www/html'
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_USER: wpuser
      WORDPRESS_DB_PASSWORD: wpuser
    networks:
      - wordpress-site

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: phpmyadmin
    environment:
      PMA_HOST: db
      MYSQL_ROOT_PASSWORD: YourPassword
      MYSQL_USER: wpuser
      MYSQL_PASSWORD: wpuser
    ports:
      - "8081:80"
    restart: always
    networks:
      - wordpress-site

volumes:
  db_data:

networks:
  wordpress-site:

